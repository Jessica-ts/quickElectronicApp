<h1>Hola {{user.nombre}}</h1>

<div class="lista">
	<div class= "card-body">
		<h4 class="card-title d-flex justify-content-between align-items-center">
			{{postcomment.title}}
		</h4>
		<p> Author: {{postcomment.author}} </p>
		<p> Description: {{postcomment.description}} </p>
		<p> Price: {{postcomment.price}} </p>
		<p> Where to get it? <br> {{postcomment.store}} </p>
		<p><img class="imageFile" src="/uploads/{{postcomment.filename}}" alt="{{title}}"></p>
	</div>
</div>

<!--Comments-->


<div class="card mt-2">
	<div class="card-header d-flex justify-content-between align-items-center">
		<h4> Reviews </h4>
	</div>
	<div class="card-body">
		<ul class="list-group">
			{{#each comments}}
				<li class="list-group-item">
					<div class="row">
						<blockquote>
								{{comment}}
						</blockquote>
					</div>
					<div class="row" d-flex justify-content-between align-items-center>
						Posted by: 
						<blockquote>
								{{postedBy}}
						</blockquote>
					</div>
				</li>
				<form action="/componentes/deleteCom/{{_id}}?_method=DELETE" method="POST">
				<input type="hidden" name="_method" value="DELETE">
					<button class="btnDelete" type="submit">
						Delete review
					</button>
				</form>
			{{/each}}
		</ul>
		<blockquote>
			<form action="/componentes/{{postcomment._id}}/comentar" method="POST">
				<div class="form-group">
					<textarea name="comment" rows="2" class="form-control" placeholder="Make a review"></textarea>
				</div>
				<div class="form-group">
					Posted by:
					<input type="text" name="postedBy" rows="2" class="form-control" placeholder="Insert your username">
				</div>
				<div class="form-group">
					<button class="btn btn-success" id="btn-comment">
						<i class="fa fa-comment"></i> Submit
					</button>
				</div>
			</form>
		</blockquote>
	</div>
</div>
<br>
<div class="form-group">
	<a href="/componentes" class="btn btn-success">Back</a>
</div>



	

